mixin videoPlayer(video={})
    div.videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`)
        div.videoPlayer__controls 
            div.videoPlayer__column 
                input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.1")
                span.volume#jsVolumeButton
                    i.fas.fa-volume-up
                span
                    span#currentTime 00:00:00
                    |/ 
                    spna#totalTime 00:00:00
            div.videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play
            div.videoPlayer__column 
                span#jsPullScreen    
                    i.fas.fa-expand-arrows-alt